{% extends 'admin.html.twig' %}

{% block body %}

<h2>Product: edit</h2>

<div class ="container mt-4">
	<h1> Editer le produit </h1>

	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
		{{ form_errors(form) }}

		<div class="row">
      <div class="col-md-4">{{ form_row(form.name) }}</div>
    </div>

		{# Génération manuelle et éclatée : #}
  		<div class="form-group">
    	{# Génération du label. #}
    	{{ form_label(form.presentation, "Presentation du produit", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    	{# Affichage des erreurs pour ce champ précis. #}
    	{{ form_errors(form.presentation) }}
    		<div class="col-sm-10">
      		{# Génération de l'input. #}
      		{{ form_widget(form.presentation, {'attr': {'class': 'form-control'}}) }}
    		</div>
  		</div>

		<div class="form-group">
    	{# Génération du label. #}
    	{{ form_label(form.details, "Detail du produit", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    	{# Affichage des erreurs pour ce champ précis. #}
    	{{ form_errors(form.details) }}
    		<div class="col-sm-10">
      		{# Génération de l'input. #}
      		{{ form_widget(form.details, {'attr': {'class': 'form-control'}}) }}
    		</div>
  		</div>
    {#{ form_rest(form) }#}
		{#-{ app.session }-#}
		{{ form_widget(form) }}
	{{ form_end(form) }}
